<resources>
    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="cardElevation">8dp</item>
        <item name="android:colorBackground">@color/background_gray</item>
    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="Theme.BatFinder" parent="BaseAppTheme" />

    <color name="primaryColor">#211946</color>
    <color name="primaryLightColor">#4c4072</color>
    <color name="primaryDarkColor">#000020</color>
    <color name="colorAccent">#FF4081</color>
    <color name="secondaryColor">#201844</color>
    <color name="secondaryLightColor">#4b3f70</color>
    <color name="secondaryDarkColor">#00001e</color>

    <color name="primaryTextColor">#ffffff</color>
    <color name="secondaryTextColor">#ffffff</color>

    <color name="background_gray">#e1e2e1</color>
    <color name="surface_background">#f5f5f6</color>
</resources>